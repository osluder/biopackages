#$Id: samtools.spec.in,v 1.3 2009/08/08 03:11:17 bret_harry Exp $
%define path %{name}-%{version}
Name: samtools
Summary: SAM (Sequence Alignment/Map) is a flexible generic format for storing nucleotide sequence alignment. 
Version: 0.1.5c.rev442
#Serial:
Release: %{revision}.%{distro}
Group: Applications/System
License: MIT License
Packager: Bret Harry <webmaster@genome.ucla.edu>
URL: http://sourceforge.net/projects/samtools/
Source0: http://voxel.dl.sourceforge.net/sourceforge/samtools/samtools-0.1.5c.tar.bz2
Patch0: samtools-0.1.5c-to-rev442.patch
Patch1: samtools-autotools.patch
Patch2: samtools-consensus.expected.txt.patch
BuildRoot: %{_tmppath}/%{path}-build

%description
SAM (Sequence Alignment/Map) is a flexible generic format for storing nucleotide sequence alignment. SAM tools provide efficient utilities on manipulating alignments in the SAM format.

%prep
%setup -n samtools-0.1.5c
%patch0 -p1
%patch1 -p1
%patch2 -p1 

%build
autoreconf --install
./configure
make

%install
rm -rf %{buildroot}
make install DESTDIR=%{buildroot}

%files
%defattr(-, root, root)
%doc /usr/local/share/doc/samtools/*
%doc /usr/local/share/doc/samtools/*/*
%dir /usr/local/lib/*
%dir /usr/local/include/*
%dir /usr/local/bin/*
%doc /usr/local/man/*/*

%clean
rm -rf ${RPM_BUILD_ROOT}

